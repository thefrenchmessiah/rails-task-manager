<h1>To Do List</h1>
<ul>
  <% @tasks.each do |task| %>
    <li><%= link_to task.title, task_path(task) %>
    <%= link_to "🗑️",
      task_path(task),
      data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %></li>
  <% end %>
</ul>
<button><%= link_to "New Task", new_task_path %></button>
